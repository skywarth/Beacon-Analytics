

@model IEnumerable<Beamity.Web.Models.AnalyticViewModel>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link href="~/css/Hover.min.css" rel="stylesheet" />
<script src="https://code.highcharts.com/highcharts.js"></script>
<script src="https://code.highcharts.com/modules/data.js"></script>
<script src="https://code.highcharts.com/modules/exporting.js"></script>
<script src="https://code.highcharts.com/modules/export-data.js"></script>

<!--Chart resources-->
<script src="https://www.amcharts.com/lib/4/core.js"></script>
<script src="https://www.amcharts.com/lib/4/charts.js"></script>
<script src="https://www.amcharts.com/lib/4/themes/animated.js"></script>
<script src="~/js/Dashboard.js"></script>">
<link href="~/css/DashboardStyle.css" rel="stylesheet" />



<script>

    var el = document.getElementById("contain");
    el.style.backgroundColor = "#008b8b";
</script>



<div id="TitleDashboard" class="container-fluid">
    <!-- Breadcrumbs-->
    <ol class="breadcrumb">
        <li class="breadcrumb-item">
            <a id="textofDashboard" href="#"><b>DASHBOARD</b></a>
        </li>
    </ol>

    <!-- Icon Cards-->
    <!--Rooms Card-->
    <div class="row">
        <!-- Yapılacak Değişikliler: Buildings yerine odalar görünecek -->
        <div class="col-xl-3 col-sm-6  Link hvr-grow">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-wifi"></i>
                    </div>
                    <div class="mr-5">ROOMS</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Building/Index">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>

        <!--Artifacts Card-->
        <div class="col-xl-3 col-sm-6  Link hvr-grow">
            <div class="card text-white bg-danger o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-paint-brush"></i>
                    </div>
                    <div class="mr-5">ARTIFACTS</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Artifact/Index">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>

        <!--Beacons Card-->
        <div class="col-xl-3 col-sm-6  Link hvr-grow" style="float:left;">
            <div class="card text-white bg-warning o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-dot-circle"></i>
                    </div>
                    <div class="mr-5">BEACONS</div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Beacon/Index">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>

        <!--Visitors Card-->
        <!-- Yapılacak Değişiklikler: o an müzede olan müşteriler gösterilecek-->
        <div class="col-xl-3 col-sm-6  Link hvr-grow" style="float:left;">
            <div class="card text-white bg-primary o-hidden h-100">
                <div class="card-body">
                    <div class="card-body-icon">
                        <i class="fas fa-fw fa-wifi"></i>
                    </div>
                    <div class="mr-5">VISITORS (now) </div>
                </div>
                <a class="card-footer text-white clearfix small z-1" href="/Building/Index">
                    <span class="float-left">View Details</span>
                    <span class="float-right">
                        <i class="fas fa-angle-right"></i>
                    </span>
                </a>
            </div>
        </div>

    </div>

</div>


<div class="col-md-12 mt-3 pl-3">
    <div class="row">
        <div class="col-md-6">
            <h5>
                <i class="far fa-chart-bar"></i> Hour / Count (Beacon) |<b>Last 30 Days</b>
            </h5>
        </div>

    </div>
</div>

<div id="chartdiv" class="col-12 col-md-6 "></div>
<div id="container" class="col-12 col-md-6"></div>


<!-- SeecondChart Styles-->
<div id="secondChart">
    <table id="datatable">
        <thead>
            <tr>
                <th></th>
                <th>Yesterday</th>
                <th>Today</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Eser1</th>
                <td>30</td>
                <td>46</td>
            </tr>
            <tr>
                <th>Esser2</th>
                <td>20</td>
                <td>13</td>
            </tr>
        </tbody>
    </table>
</div>

<div>
    

    <!-- New Chart-->
    <div>

        <script>

            Highcharts.chart('container', {
                data: {
                    table: 'datatable'
                },
                chart: {
                    type: 'column'
                },
                title: {
                    text: 'MOST / LEAST interested artifacts.'
                },
                yAxis: {
                    allowDecimals: false,
                    title: {
                        text: ''
                    }
                },
                tooltip: {
                    formatter: function () {
                        return '<b>' + this.series.name + '</b><br/>' +
                            this.point.y + ' ' + this.point.name.toLowerCase();
                    }
                }
            });

        </script>
    </div>

</div>


<div class="container" style="float:left;">
    <div class="row">
        <div class="col-4">
            rowdaki ilk chart eklenecek
        </div>

        <div class="col-4">
            row daki ikinci chart eklenecek
        </div>

        <div class="col-4">
            row daki üçüncü chart eklenecek
        </div>

    </div>

</div>

