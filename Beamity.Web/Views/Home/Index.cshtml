    function loadDatatableChart() {
        Highcharts.chart('container', {
        data: {
            table: 'datatable'
        },
        chart: {
            type: 'column'
        },
        title: {
            text: 'MOST / LEAST interested artifacts.'
        },
        yAxis: {
            allowDecimals: false,
            title: {
                text: ''
            }
        },
        tooltip: {
            formatter: function () {
                return '<b>' + this.series.name + '</b><br/>' +
                    this.point.y + ' ' + this.point.name.toLowerCase();
            }
        }
    });
    
    }

    locationAnon().pipe(loadPayload).pipe(dataToChart);

    async function dataToChart() {
        await loadDatatableChart();
        await fillRadarChart();
        await fillBehaviourChart();
    } 
</script>