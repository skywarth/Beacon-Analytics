    <script type="text/javascript">
        var locationId;

        $(document).ready(function () {
            debugger
            $.ajax({

                url: "/Session/GetVariable",
                data: {
                    key: "LocationId"
                },
                cache: false,
                type: "POST",
                success: function (response) {
                    locationId = response.d;
                    SetLocationName(response.d);
                    if (locationId == null) {
                        window.location.href = "/Location/ChooseLocation";
                    }
                },
                error: function () {
                    alert("couldnt get Session! ");
                }
            });

        });
        function swalload() {
            swal.fire({
                title: 'Loading....',
                html: 'Please wait during the processing time',
                timer: 9999999999,
                onBeforeOpen: () => {
                    Swal.showLoading()
                    timerInterval = setInterval(() => {
                        Swal.getContent().querySelector('strong')
                            .textContent = Swal.getTimerLeft()
                    }, 100)
                },
                onClose: () => {

                }
            });
        }
        $("#logout").click(function () {
            swalload();
            var options = {};
            options.url = "/User/Logout";
            options.type = "POST";
            options.success = function () {
                window.location.href = "/User/Login";
            }
            $.ajax(options);
        });
        function SetLocationName( d) {
            var options = {};
            options.url = "https://localhost:44327/api/Location/GetLocation";
            var obj = {};
            options.type = "POST";
            obj.Id = d;
            options.dataType = "json";
            options.contentType = "application/json";
            debugger
            options.data = JSON.stringify(obj);
            options.success = function (data) {
                $(".locationName").empty();
                $(".locationName").text("Project: "+ data.name);
            };
            options.error = function () {
                alert("error");
            };
            $.ajax(options);
        }
    </script>

